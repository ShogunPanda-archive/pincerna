require "pincerna"

case ARGV[0]
  when "install" then
    system("open #{Pincerna::Base::ROOT}/pincerna.alfredworkflow")
    puts "Installation of Pincerna into Alfred completed! Have fun! :)"
  when "quit"
    system("curl -s http://localhost:#{13000 + Process.uid}/quit")
  else
    require "goliath"
    require "pincerna/server"
end
